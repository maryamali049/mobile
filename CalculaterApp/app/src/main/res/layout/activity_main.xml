<?xml version="1.0" encoding="utf-8"?>
<TableLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:id="@+id/operation"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/results"/>
<TableRow>
    <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="7"
            android:id="@+id/btn7"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="8"
            android:id="@+id/btn8"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="9"
            android:id="@+id/btn9"/>
       <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint="/"
            android:id="@+id/btndiv"/>
</TableRow>

    <TableRow>
       <Button
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:hint="4"
           android:id="@+id/btn4"/>

       <Button
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:hint="5"
           android:id="@+id/btn5"/>

       <Button
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:hint="6"
           android:id="@+id/btn6"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint="*"
            android:id="@+id/btnmul"/>
    </TableRow>

    <TableRow>
       <Button
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:hint="1"
           android:id="@+id/btn1"/>

      <Button
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:hint="2"
           android:id="@+id/btn2"/>

      <Button
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:hint="3"
           android:id="@+id/btn3"/>
      <Button
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:hint="-"
          android:id="@+id/btnsub"/>
    </TableRow>

      <TableRow>
        <Button
             android:layout_height="wrap_content"

             android:layout_width="wrap_content"
             android:hint="0"
             android:id="@+id/btn0"/>

        <Button
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:hint="C"
             android:id="@+id/btnc1"/>

        <Button
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:hint="="
             android:id="@+id/btneq"/>
        <Button
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:hint="+"
             android:id="@+id/btnadd"/>
      </TableRow>
 </TableLayout>

